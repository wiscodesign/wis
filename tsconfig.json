{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "remote:self/locales": ["src/packages/locales/en-US/index"],
      "remote:wis/locales": ["src/packages/locales/en-US/index"],
      "remote:self/*": ["src/packages/*/index", "src/packages/*/pc/index"],
      "remote:wis/*": ["src/packages/*/index", "src/packages/*/pc/index"]
    } /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
  },
  "include": ["src", ".wisrc.ts", "wis.d.ts"]
}
